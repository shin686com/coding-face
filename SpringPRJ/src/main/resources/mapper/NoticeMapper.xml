<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "=//mybatis.org//DTO Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kopo.poly.persistance.mapper.IMarketMapper">

    <insert id="insertNotice" parameterType="NoticeDTO">
        INSERT INTO user
            (USER_NAME,USER_PWD,USER_EMAIL,USER_ID,USER_GENDER)
            VALUES
                (#{user_name},#{user_pwd},#{user_id},#{user_gender},#{user_email})
    </insert>

    <select id="login" parameterType="NoticeDTO" resultType="NoticeDTO">
       SELECT * FROM user
            WHERE USER_ID = #{user_id} AND USER_PWD = #{user_pwd}

    </select>

    <update id="update" parameterType="NoticeDTO">
        update user set  USER_NAME = #{user_name},
            USER_PWD =#{user_pwd} ,USER_EMAIL =#{user_email} ,USER_ID =#{user_id},USER_GENDER = #{user_gender}


    </update>

    <delete id="delete">
        delete from user
    </delete>

    <select id="getNoticeList" parameterType="NoticeDTO" resultType="NoticeDTO">
        SELECT * FROM user

    </select>



</mapper>